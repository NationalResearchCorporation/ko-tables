@{
    ViewBag.Breadcrumbs = ViewBag.Breadcrumbs ?? new LinkedList<Breadcrumb>();
    ViewBag.Breadcrumbs.AddFirst(new Breadcrumb("Examples", "/Home/Index"));
}
<!DOCTYPE html>@using NRC.Reveal.KoTables.Models
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/ko-tables")
    @Scripts.Render("~/bundles/layout")
    @RenderSection("scripts", required: false)
    @Html.Partial("~/Views/Shared/_TableTemplates.cshtml")
</head>
<body>
    <header>
        <ul class="breadcrumbs">
            @foreach (var breadcrumb in ViewBag.Breadcrumbs) {
                <li><a href="@breadcrumb.Link">@breadcrumb.Description</a></li>
            }
        </ul>
        <h2>@ViewBag.Title</h2>
    </header>
    <div>
        <div class="sidebar">
            <h4>Set data size:</h4>
            <ul>
                <li><a href="#" onclick="changeDataSource('Tiny')">Tiny</a></li>
                <li><a href="#" onclick="changeDataSource('Medium')">Medium</a></li>
                <li><a href="#" onclick="changeDataSource('Large')">Large</a></li>
                <li><a href="#" onclick="changeDataSource('ExtraLarge')">Extra Large</a></li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
